extends layouts/main

block content
  .form-container
    form(action=routes.editVideo(video.id), method="post")
      input(type="text", placeholder="Title", name="title", value=video.title)
      textarea(name="description", cols="20", rows="3", placeholder="Description")=video.description
      input(type="submit", value="Update Video")
    a.form-container__link(href=routes.deleteVideo) Delete Video